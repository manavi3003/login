<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.manavimishra.simpleloginapp.Login">

    <TextView
        android:text="Login Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/textView_loginpage"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:id="@+id/textView3_password"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:id="@+id/textView2_username"
        android:layout_below="@+id/textView_loginpage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignBottom="@+id/textView3_password"
        android:layout_toRightOf="@+id/textView_loginpage"
        android:layout_toEndOf="@+id/textView_loginpage"
        android:id="@+id/editText2_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_username"
        android:layout_above="@+id/textView3_password"
        android:layout_alignLeft="@+id/editText2_password"
        android:layout_alignStart="@+id/editText2_password" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5_attempt_count"
        android:layout_alignBottom="@+id/textView4_Attempts"
        android:layout_alignLeft="@+id/editText2_password"
        android:layout_alignStart="@+id/editText2_password"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/button_login"
        android:layout_below="@+id/textView4_Attempts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Attempts:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/textView4_Attempts"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/textView3_password"
        android:layout_alignRight="@+id/textView3_password"
        android:layout_alignEnd="@+id/textView3_password" />
</RelativeLayout>
